<header class="main-header">
    <!-- Logo -->
    <a href="~/Home" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>Jam </b>Shop</span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>Jam.Clothing </b>Shop</span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <!-- User Account: style can be found in dropdown.less -->
                @{
                    var userData = User.GetUserData();
                    if (userData != null)
                    {
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="~/images/employees/@userData.Photo" class="user-image" alt="User Image">
                                <span class="hidden-xs">@userData.DisplayName</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="~/images/employees/@userData.Photo" class="img-circle" alt="User Image">
                                    <p>
                                        @userData.DisplayName
                                    </p>
                                </li>
                                <!-- Menu Body -->
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="~/Account/AccountDetails" class="btn btn-default btn-flat">Đổi mật khẩu</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="~/Account/Logout" class="btn btn-default btn-flat"><i class="fa-solid fa-arrow-right-from-bracket"></i> Đăng xuất</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    }
                }
                <!-- Control Sidebar Toggle Button -->
                @*  <li>
                <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                </li> *@
            </ul>
        </div>
    </nav>
</header>
